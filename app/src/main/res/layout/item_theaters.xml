<?xml version="1.0" encoding="utf-8"?>
<im.wait.movies.views.MaterialRippleLayout
    android:id="@+id/iv_ripple"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rippleAdapterClicked="false"
    app:rippleAlpha="0.2"
    app:rippleDelayClick="true"
    app:rippleHover="true"
    app:rippleJoyColor="#8F8F8F"
    app:rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_marginTop="1dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_start_one"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:src="@drawable/rating_selector"
                android:layout_height="fill_parent"/>
            <ImageView
                android:id="@+id/iv_start_two"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:src="@drawable/rating_selector"
                android:layout_height="fill_parent"/>
            <ImageView
                android:id="@+id/iv_start_three"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:src="@drawable/rating_selector"
                android:layout_height="fill_parent"/>
            <ImageView
                android:id="@+id/iv_start_four"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:src="@drawable/rating_selector"
                android:layout_height="fill_parent"/>
            <ImageView
                android:id="@+id/iv_start_five"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:src="@drawable/rating_selector"
                android:layout_height="fill_parent"/>
            <TextView
                android:id="@+id/tv_star"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#f88467"
                android:textSize="11sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/iv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="14sp"/>
    </LinearLayout>
</im.wait.movies.views.MaterialRippleLayout>


